<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qc"
            android:layout_width="386dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/imager_qc"
            android:scaleType="centerCrop"
            android:src="@drawable/mylove1"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thư Viện"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>

            <RelativeLayout
                android:id="@+id/home_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/colorGrey200"
                    android:src="@drawable/baseline_music_note_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/icon1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bài hát"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/number_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_24dp"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_play_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/colorGrey200"
                    android:src="@drawable/baseline_queue_music_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/icon2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Playlist"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/number_laylist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_24dp"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/colorGrey200"
                    android:src="@drawable/baseline_album_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/icon3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Album"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/number_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_black_24dp"></ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>