<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mylove1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="Xa em"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="Noo Phuoc Thinh"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="#00FFFFFF"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_skip_previous_black_24dp" />

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="#00FFFFFF"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_play_arrow_black_24dp" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="#00FFFFFF"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_skip_next_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>